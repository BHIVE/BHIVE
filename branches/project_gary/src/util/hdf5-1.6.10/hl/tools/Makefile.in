top_srcdir=@top_srcdir@
top_builddir=../..
srcdir=@srcdir@
@COMMENCE@

## List all subdirectories
##
SUBDIRS=gif2h5

## Add include directory to the C preprocessor flags, add -lh5tools and
## -lhdf5 to the list of libraries.
##
CPPFLAGS=-I. -I$(srcdir) -I$(top_builddir)/src -I$(top_srcdir)/src  \
         -I$(top_srcdir)/tools/lib -I$(top_srcdir)/hl/src           \
         -I$(top_builddir)/hl/src @CPPFLAGS@

## Test programs and scripts.
##
TEST_PROGS=
TEST_SCRIPTS=

## The HL tools depend on the tools library, the HL library, and the
## HDF5 library.
##
LIBTOOLS=$(top_builddir)/tools/lib/libh5tools.la
LIBHDF5=$(top_builddir)/src/libhdf5.la
LIBHDF5_HL=$(top_builddir)/hl/src/libhdf5_hl.la

PROGS=$(PUB_PROGS) $(TEST_PROGS)

## Source and object files for the tests
##
TEST_SRC=
TEST_OBJ=$(TEST_SRC:.c=.lo)

lib ::
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@) || exit 1;                                 \
	  fi;                                                                 \
	done
	
progs: $(LIBHDF5_HL) $(LIBTOOLS) $(LIBHDF5)
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@) || exit 1;                                 \
	  fi;                                                                 \
	done

dep depend:
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@) || exit 1;                                 \
	  fi;                                                                 \
	done

check check-s check-p check-clean tests test _test: $(PROGS)
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@) || exit 1;                                 \
	  fi;                                                                 \
	done

uninstall:
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@) || exit 1;                                 \
	  fi;                                                                 \
	done

install:
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@) || exit 1;                                 \
	  fi;                                                                 \
	done

install-doc:
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@);                                           \
	  fi;                                                                 \
	done

.PHONY: all lib progs test _test install uninstall clean           \
	mostlyclean distclean maintainer-clean

clean mostlyclean:
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@);                                           \
	  fi;                                                                 \
	done

distclean:
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@);                                           \
	  fi;                                                                 \
	done
	-$(RM) Makefile

maintainer-clean:
	@@SETX@; for d in X $(SUBDIRS); do                                    \
	  if test $$d != X; then                                              \
	    (cd $$d && $(MAKE) $@);                                           \
	  fi;                                                                 \
	done

